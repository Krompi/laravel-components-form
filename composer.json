{
    "name": "krompi/laravel-components-form",
    "autoload": {
        "psr-4": {
            "Krompi\\LaravelComponentsForm\\": "src/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "illuminate/support": "^7.22.4 || ^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.3",
        "phpunit/phpunit": "^8.5 || ^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Krompi\\LaravelComponentsForm\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
